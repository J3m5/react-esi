{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "./src/",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./lib/",
    "sourceMap": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "types": ["jest", "node"],
    "moduleResolution": "Node10",
    "strict": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "target": "ES5",
    "declaration": true
  },
  "include": ["./src/"]
}

{
  "name": "react-esi",
  "version": "0.3.1",
  "description": "React ESI: Blazing-fast Server-Side Rendering for React and Next.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dunglas/react-esi.git"
  },
  "keywords": [
    "react",
    "react-esi",
    "esi"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dunglas/react-esi/issues"
  },
  "author": "KÃ©vin Dunglas",
  "homepage": "https://github.com/dunglas/react-esi#readme",
  "exports": {
    ".": {
      "types": "./lib/withESI.d.ts",
      "import": "./lib/withESI.js",
      "require": "./lib/withESI.js"
    },
    "./lib/*": {
      "types": "./lib/*.d.ts",
      "default": "./lib/*.js"
    },
    "./*": {
      "types": "./lib/*.d.ts",
      "default": "./lib/*.js"
    }
  },
  "main": "lib/withESI.js",
  "typings": "lib/withESI.d.ts",
  "scripts": {
    "build": "pnpm clean && pnpm exec tsc -p tsconfig.build.json",
    "clean": "rm -rf ./lib/*",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "cs": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "lint": "eslint --ext js,jsx,ts,tsx",
    "lint:fix": "eslint --fix --ext js,jsx,ts,tsx src examples",
    "test": "jest",
    "watch": "tsc -w -p tsconfig.build.json"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^18.17.4",
    "@types/prop-types": "^15.7.9",
    "@types/react": "^18.2.30",
    "@types/react-dom": "^18.2.14",
    "@types/react-test-renderer": "^18.0.5",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.2",
    "jest": "^29.5.6",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "react-test-renderer": "^18.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "prop-types": "^15.8.1",
    "react": "^16.7.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.7.0 || ^17.0.0 || ^18.0.0"
  }
}